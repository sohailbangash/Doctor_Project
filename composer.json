{
    "name": "netchainmedia/drupal-install",
    "description": "NetChain Media's default Drupal based starter kit",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "netchainmedia",
            "email": "support@netchainmedia.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "require": {
        "composer/installers": "^1.9",
        "drupal/admin_toolbar": "^2.4",
        "drupal/console": "^1.9",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-project-message": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/ds": "^3.9",
        "drupal/entity_browser": "^2.5",
        "drupal/google_tag": "^1.4",
        "drupal/metatag": "^1.14",
        "drupal/module_filter": "^3.1",
        "drupal/multiple_registration": "^3.0",
        "drupal/page_manager": "^4.0@beta",
        "drupal/panels": "^4.6",
        "drupal/pathauto": "^1.8",
        "drupal/redirect": "^1.6",
        "drupal/simple_sitemap": "^3.7",
        "drupal/views_bulk_operations": "^3.13",
        "drupal/webform": "^6.0",
        "drush/drush": "^10.3",
        "netchainmedia/drupal_profile": "^1.0",
        "oomphinc/composer-installers-extender": "^2.0"
    },
    "extra": {
        "installer-types": [
            "ncm-library",
            "ncm-module",
            "ncm-profile",
            "ncm-theme",
            "ncm-custom-profile",
            "ncm-custom-module",
            "ncm-custom-theme"
        ],
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:ncm-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module",
                "type:ncm-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile",
                "type:ncm-profile"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile",
                "type:ncm-custom-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme",
                "type:ncm-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module",
                "type:ncm-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme",
                "type:ncm-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                            </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal StarterKit   </>",
                "<bg=blue;fg=white>  from the netchainmedia/drupal-install template! You can visit </>",
                "<bg=blue;fg=white>  our documentations at: https://docs.netchainemdia.com     </>",
                "<bg=blue;fg=white>                                                            </>",
                ""
            ]
        }
    },
    "require-dev": {
        "kint-php/kint": "^3.3"
    }
}
